<h1>Customers</h1>

<table>
  <tr>
    <th rowspan="2">Name</th>
    <th rowspan="2">Country</th>
    <th rowspan="2">Details</th>
    <th colspan="2">Terms</th>
    <th colspan="3">Orders Summary</th>
  </tr>
  <tr>
    <th>Discount</th>
    <th>Returns</th>
    <th>Shipped</th>
    <th>Part Shipped</th>
    <th>In Production</th>
  </tr>
    <% @customers.each do |customer| %>
  <tr>
    <td colspan="8">&nbsp;</td>
  </tr>
  <tr>
    <td><strong><%= customer.name %></strong></td>
    <td><strong><%= customer.country %></strong></td>
    <td class="showhim"><strong>Details</strong>
        <div class="showme">
            <p><strong><%= customer.name %></strong></p>
            <p><%= customer.contact %></p>
            <p><%= customer.address1 %><br />
            <%= customer.address2 %><br />
            <%= customer.city %><br />
            <%= customer.country %><br />
            <%= customer.postcode %><br /><br />
            <%= mail_to customer.email %><br />
            <%= customer.telephone %></p>
            <p><%= link_to "edit", edit_customer_path(customer) %> |
            <%= link_to 'delete', customer, confirm: customer.name + ' will be deleted! Are you sure you want to delete it?', method: :delete %></p>
        </div>
    </td>
    <td><strong><%= customer.discount %></strong></td>
    <td><strong><%= customer.returns %></strong></td>
    <td><strong> </strong></td>
    <td><strong> </strong></td>
    <td><strong> </strong></td>
  </tr>

  <% customer.consignees.each do |consignee| %>
  <tr>
    <td class="space">-<%= consignee.name %></td>
    <td><%= consignee.country %></td>
    <td class="showhim">Details
        <div class="showme">
            <p><strong><%= consignee.name %></strong></p>
            <p><%= consignee.address1 %><br />
            <%= consignee.address2 %><br />
            <%= consignee.city %><br />
            <%= consignee.country %><br />
            <%= consignee.postcode %><br />
            <p><%= link_to "edit", edit_customer_consignee_path(customer, consignee) %> |
            <%= link_to 'delete', customer_consignee_path(customer, consignee), confirm: consignee.name + ' will be deleted! Are you sure you want to delete it?', method: :delete %></p>
        </div>
    </td>
  </tr>

  <% end %>
  <tr>
    <td class="space">-<%= link_to "new consignee", new_customer_consignee_path(customer) %></td>
    <td colspan="7"></td>
  </tr>
  <% end %>
</table>






