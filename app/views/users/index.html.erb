<h1>Users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Department</th>
    <th>Email</th>
    <th>Admin</th>
    <td colspan="2"></td>
  </tr>
    <% @users.each do |user| %>
    <% if user.admin? %>
    <% temp = 'yes' %>
    <% else %>
    <% temp = 'no' %>
    <% end %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.department %></td>
    <td><%= user.email %></td>
    <td><%= temp %></td>
    <td><%= link_to "edit", edit_user_path(user) %></td>
    <td><%= link_to 'delete', user, confirm: user.name + ' will be deleted! Are you sure you want to delete it?', method: :delete %></td>
  </tr>
    <% end %>
</table>
<%= link_to "Create new user", new_user_path %>





