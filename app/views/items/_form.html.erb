<%= form_for([ @order, @drop, @item]) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
<div id="form_left">


  <div class="field">
    <%= f.label :colour %><br />
    <%= f.text_field :colour %>
  </div>
  <div class="field">
    <%= f.label :customer_style %><br />
    <%= f.text_field :customer_style %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :customer_price %><br />
    <%= f.text_field :customer_price %>
  </div>
  <div class="field">
    <%= f.label :factory_price %><br />
    <%= f.text_field :factory_price %>
  </div>
  <div class="field">
    <%= f.label :line_number %><br />
    <%= f.text_field :line_number %>
  </div>
  <div class="field">
    <%= f.label :mda %><br />
    <%= f.text_field :mda %>
  </div>
</div>
<div id="form_right">
  <div class="field">
    <%= f.label :lining %><br />
    <%= f.text_area :lining, :rows=>2, :cols=>70  %>
  </div>
  <div class="field">
    <%= f.label :sock %><br />
    <%= f.text_area :sock, :rows=>2, :cols=>70  %>
  </div>
  <div class="field">
    <%= f.label :binding %><br />
    <%= f.text_area :binding, :rows=>2, :cols=>70  %>
  </div>
  <div class="field">
    <%= f.label :metals %><br />
    <%= f.text_area :metals, :rows=>2, :cols=>70  %>
  </div>
  <div class="field">
    <%= f.label :sole %><br />
    <%= f.text_area :sole, :rows=>2, :cols=>70  %>
  </div>
  <div class="field">
    <%= f.label :heel %><br />
    <%= f.text_area :heel,:rows=>2, :cols=>70  %>
  </div>
</div>
<div id="form_bottom">
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>