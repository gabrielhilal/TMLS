<h1>Factories</h1>

<table>
  <tr>
    <th rowspan="2">Name</th>
    <th rowspan="2">Country</th>
    <th rowspan="2">Contact Details</th>
    <th colspan="3">Orders Summary</th>
  </tr>
  <tr>
    <th class="showhim">SH<div class= "showme">Orders shipped</div></th>
    <th class="showhim">PS<div class= "showme">Orders part shipped</div></th>
    <th class="showhim">PR<div class= "showme">Orders in production</div></th>
  </tr>
    <% @factories.each do |factory| %>
  <tr>
    <td><%= factory.name %></td>
    <td><%= factory.country %></td>
    <td class="showhim">Contact
    <div class="showme">
        <p><strong><%= factory.name %></strong></p>
        <p><%= factory.contact %></p>
        <p><%= factory.address1 %><br />
           <%= factory.address2 %><br />
           <%= factory.city %><br />
           <%= factory.country %><br />
           <%= factory.postcode %><br />
           <%= factory.email %><br />
           <%= factory.telephone %></p>
        <p><%= link_to "edit", edit_factory_path(factory) %> |
        <%= link_to 'delete', factory, confirm: factory.name + ' will be deleted! Are you sure you want to delete it?', method: :delete %></p>
        </div>
    <td></td>
    <td></td>
    <td></td>
  </tr>
    <% end %>
</table>






