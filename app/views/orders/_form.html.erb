<%= form_for(@order) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :customer %><br />
    <%= f.collection_select(:customer_id, Customer.all, :id, :name , {:include_blank => 'Select Customer'} ) %>
  </div>
  <div class="field">
    <%= f.label :factory %><br />
    <%= f.collection_select(:factory_id, Factory.all, :id, :name , {:include_blank => 'Select Factory'} ) %>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :currency %><br />
        <%= f.radio_button :currency, "usd", :checked => true %>
        <%= f.label :usd, "$ USD" %><br />
        <%= f.radio_button :currency, "gbp" %>
        <%= f.label :gbp, "£ GBP" %><br />
        <%= f.radio_button :currency, "eur" %>
        <%= f.label :eur, "€ EUR" %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows=>10, :cols=>100 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>