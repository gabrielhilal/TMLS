  <tr>
    <td><%= order.customer.name %></td>
    <td><%= link_to order.number, order_path(order) %></td>
    <td><%= order.date.to_formatted_s(:rfc822) %></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  <% end %>
</table>






