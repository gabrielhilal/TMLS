<h1>Orders</h1>

<table>
  <tr>
    <th rowspan="2">Customer</th>
    <th rowspan="2">Order No</th>
    <th rowspan="2">Order Date</th>
    <th colspan="2">Total Amount</th>
    <th colspan="2">Shipping Date</th>
    <th rowspan="2">Order Status</th>
  </tr>
  <tr>
    <th>Customer</th>
    <th>Factory</th>
    <th>Customer</th>
    <th>Factory</th>
  </tr>
